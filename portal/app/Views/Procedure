    <!-- Print and Export to PDF buttons -->
  <div class="button-container">
    <button id="printButton" class="print-button">Print Certificate</button>
    <!-- <button id="pdfButton" class="pdf-button">Export to PDF</button> -->
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="<?php echo base_url('public/assets-new/cert_soft/index.js'); ?>"></script>
  <script>
   $(document).ready(function() {
  $('#printButton').click(function() {
    window.print();
  });

  $('#pdfButton').click(function() {
    var pdf = new jsPDF();
    var certificateContent = $('.certificate-container')[0];

    // Options for PDF export
    var options = {
      background: '#fff',
      scale: 3 // Increase scale for better resolution
    };

    // Export certificate content to PDF
    pdf.html(certificateContent, options, function() {
      pdf.save('certificate.pdf');
    });
  });
});

  </script>
